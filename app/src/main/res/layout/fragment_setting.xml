<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_setName"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Timer Set"
            android:inputType="textCapSentences|textPersonName"
            android:maxLength="40"
            android:textAlignment="center"
            android:textColor="#3C3CFF"
            android:textColorHint="#4A3C3CFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_setCount"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="8"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="#3C3CFF"
            android:textColorHint="#4A3C3CFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_exercise"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="20"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="#3C3CFF"
            android:textColorHint="#4A3C3CFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_rest"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setRest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="10"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="#3C3CFF"
            android:textColorHint="#4A3C3CFF"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>